{
  "name": "hsbc-web-app",
  "version": "1.0.0",
  "description": "Simple one-page app to convert downloaded HSBC-format CSV credit card info to Xero format CSV",
  "type": "module",
  "main": "./src/index.ts",
  "private": true,
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,html,scss,css}\""
  },
  "author": "barry@lissome.hk",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.3.6",
    "csv-parse": "^5.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/node": "^20.5.6",
    "@vitest/coverage-v8": "^3.1.3",
    "autoprefixer": "^10.4.21",
    "chai": "^4.3.7",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "process": "^0.11.10",
    "sass": "^1.87.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  }
}
